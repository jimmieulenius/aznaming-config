{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/jimmieulenius/aznaming/refs/heads/main/schemas/config/config.json",
  "type": "object",

  "properties": {
    "sections": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/sectionsItem"
      }
    }
  },

  "required": [
    "sections"
  ],

  "$defs": {
    "sectionsItem": {
      "type": "object",
      "properties": {
        "uri": {
          "type": "string"
        },
        "path": {
          "type": "string"
        }
      },
      "required": [
        "uri"
      ]
    }
  }
}
