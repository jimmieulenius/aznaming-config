{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/jimmieulenius/aznaming/refs/heads/main/schemas/config/defs/templates.json",

  "type": "object",
  "patternProperties": {
    "^(?!\\$)": {
      "type": "object",
      "properties": {
        "$id": {
          "type": "string"
        },
        "$ref": {
          "type": "string"
        },
        "properties": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "shortName": {
              "type": "string"
            },
            "template": {
              "type": "string"
            },
            "lengthMax": {
              "type": "number",
              "minimum": 1
            },
            "lengthMin": {
              "type": "number",
              "minimum": 1
            },
            "casing": {
              "type": "string",
              "enum": [
                "lower",
                "upper",
                "none"
              ]
            },
            "values": {
              "type": "object",
              "patternProperties": {
                "^(?!\\$)": {
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "number"
                    }
                  ]
                }
              }
            },
            "validText": {
              "type": "string"
            },
            "invalidText": {
              "type": "string"
            },
            "invalidCharacters": {
              "type": "string"
            },
            "invalidCharactersStart": {
              "type": "string"
            },
            "invalidCharactersEnd": {
              "type": "string"
            },
            "invalidCharactersConsecutive": {
              "type": "string"
            },
            "regex": {
              "type": "string"
            },
            "staticValue": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "shortName",
            "template",
            "lengthMax",
            "lengthMin",
            "casing",
            "validText",
            "invalidText",
            "invalidCharacters",
            "invalidCharactersStart",
            "invalidCharactersEnd",
            "invalidCharactersConsecutive",
            "regex",
            "staticValue"
          ],
          "additionalProperties": false
        }
      }
    }
  },
  "additionalProperties": false
}
