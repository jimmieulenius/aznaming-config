{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^[^$]": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["childDictionary", "dictionary", "freeText", "instance", "unique"]
        }
      },
      "required": ["type"],
      "dependentSchemas": {
        "dictionary": {
          "properties": {
            "type": { "const": "dictionary" },
            "source": {
              "type": "object",
              "patternProperties": {
                ".": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          "required": ["source"],
          "additionalProperties": false
        },
        "childDictionary": {
          "properties": {
            "type": { "const": "freeText" }
          },
          "required": [],
          "additionalProperties": false
        }
      }
    }
  },
  "additionalProperties": false
}
