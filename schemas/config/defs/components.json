{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    }
  },
  "required": ["$schema"],
  "patternProperties": {
    "^[^$]": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["childDictionary", "dictionary", "freeText", "instance", "unique"]
        }
      },
      "required": ["type"],
      "dependentSchemas": {
        "dictionary": {
          "properties": {
            "source": {
              "type": "object",
              "patternProperties": {
                ".": { "type": "string" }
              }
            }
          },
          "required": ["source"]
        },
        "freeText": {
          "properties": {
          },
          "required": []
        }
      }
    }
  },
  "additionalProperties": false
}
