{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    }
  },
  "required": [
    "$schema"
  ],
  "patternProperties": {
    "^[^$]": {
      "type": "object",
      "properties": {
        "$ref": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "childDictionary",
            "dictionary",
            "freeText",
            "instance",
            "unique"
          ]
        }
      },
      "if": {
        "properties": {
          "$ref": {
            "not": {}
          }
        }
      },
      "then": {
        "required": [
          "type"
        ]
      },
      
      "oneOf": [
        
        {
          "properties": {
            "type": {
              "enum": [
                "dictionary"
              ]
            },
            "$ref": {
              "type": "string"
            },
            "source": {
              "type": "object",
              "patternProperties": {
                ".": {
                  "type": "string"
                }
              }
            }
          },
          "if": {
            "properties": {
              "$ref": {
                "not": {}
              }
            }
          },
          "then": {
            "required": [
              "source"
            ]
          },
          "additionalProperties": false
        },
        
        {
          "properties": {
            "type": {
              "enum":
              [
                "freeText"
              ]
            }
          },
          "required": [],
          "additionalProperties": false
        },

        {
          "properties": {
            "type": {
              "enum": [
                "instance"
              ]
            },
            "maxValue": {
              "type": "number"
            },
            "padding": {
              "type": "object",
              "properties": {
                "totalLength": {
                  "type": "number"
                },
                "paddingCharacter": {
                  "type": "string",
                  "maxLength": 1,
                  "minLength": 1
                }
              }
            }
          },
          "required": [],
          "additionalProperties": false
        }
        
      ]
    }
  },
  "additionalProperties": false
}
