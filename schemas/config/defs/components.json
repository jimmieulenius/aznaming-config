{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/jimmieulenius/aznaming/refs/heads/main/schemas/config/defs/components.json",

  "type": "object",
  "patternProperties": {
    "^(?!\\$)": {

      "type": "object",
      "properties": {
        "$id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum" : [
            "childDictionary",
            "dictionary",
            "instance",
            "freeText",
            "unique"
          ]
        }
      },
      
      "required": [
          "type"
      ],
      
      "allOf": [

        {
          "if": {
            "properties": {
              "type": {
                "const": "dictionary"
              }
            }
          },
          "then": {
            "properties": {
              "source": {
                "type": "object",
                "patternProperties": {
                  ".": {
                    "type": "string"
                  }
                }
              }
            },
            "required": [
              "source"
            ]
          }
        },

        {
          "if": {
            "properties": {
              "type": {
                "const": "freeText"
              }
            }
          },
          "then": {}
        },

        {
          "if": {
            "properties": {
              "type": {
                "const": "instance"
              }
            }
          },
          "then": {
            "properties": {
              "maxValue": {
                "type": "number"
              },
              "padding": {
                "type": "object",
                "properties": {
                  "totalLength": {
                    "type": "number"
                  },
                  "character": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 1
                  }
                }
              }
            },
            "required": [
              "maxValue"
            ]
          }
        }
        
      ]

    }
  }
}
