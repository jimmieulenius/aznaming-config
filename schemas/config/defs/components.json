{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/jimmieulenius/aznaming/refs/heads/main/schemas/config/defs/components.json",

  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    }
  },
  "required": [
    "$schema"
  ],
  "patternProperties": {
    "^[^$]": {
      "type": "object",
      "properties": {
        "$id": {
          "type": "string"
        },
        "$ref": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "childDictionary",
            "dictionary",
            "freeText",
            "instance",
            "unique"
          ]
        },
        "properties": {
          "type": "object"
        }
      },
      "if": {
        "properties": {
          "$ref": {
            "not": {}
          }
        }
      },
      "then": {
        "required": [
          "type",
          "properties"
        ]
      },
      
      "oneOf": [
        
        {
          "properties": {
            "type": {
              "enum": [
                "childDictionary"
              ]
            },
            "$ref": {
              "type": "string"
            },
            "properties": {
              "type": "object",
              "properties": {
                "parent": {
                  "type": "string"
                },
                "source": {
                  "type": "object",
                  "patternProperties": {
                    ".": {
                      "type": "object",
                        "patternProperties": {
                          ".": {
                            "type": "string"
                          }
                        }
                    }
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "if": {
            "properties": {
              "$ref": {
                "not": {}
              }
            }
          },
          "then": {
            "required": [
              "type",
              "properties"
            ]
          },
          "additionalProperties": false
        },

        {
          "properties": {
            "type": {
              "enum": [
                "dictionary"
              ]
            },
            "$ref": {
              "type": "string"
            },
            "properties": {
              "type": "object",
              "properties": {
                "source": {
                  "type": "object",
                  "patternProperties": {
                    ".": {
                      "type": "string"
                    }
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "if": {
            "properties": {
              "$ref": {
                "not": {}
              }
            }
          },
          "then": {
            "required": [
              "type",
              "properties"
            ]
          },
          "additionalProperties": false
        },
        
        {
          "properties": {
            "type": {
              "enum":
              [
                "freeText"
              ]
            },
            "$ref": {
              "type": "string"
            },
            "properties": {
              "type": "object",
              "properties": {},
              "additionalProperties": false
            }
          }
        },

        {
          "properties": {
            "type": {
              "enum": [
                "instance"
              ]
            },
            "$ref": {
              "type": "string"
            },
            "properties": {
              "type": "object",
              "properties": {
                "minValue": {
                  "type": "number",
                  "minimum": 0
                },
                "maxValue": {
                  "type": "number",
                  "minimum": 0
                },
                "padding": {
                  "type": "object",
                  "properties": {
                    "totalLength": {
                      "type": "number"
                    },
                    "paddingCharacter": {
                      "type": "string",
                      "maxLength": 1,
                      "minLength": 1
                    }
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "if": {
            "properties": {
              "$ref": {
                "not": {}
              }
            }
          },
          "then": {
            "required": [
              "type",
              "properties"
            ]
          },
          "additionalProperties": false
        },

        {
          "properties": {
            "type": {
              "enum": [
                "unique"
              ]
            },
            "$ref": {
              "type": "string"
            },
            "properties": {
              "type": "object",
              "properties": {
                "length": {
                  "type": "number",
                  "minimum": 1,
                  "maximum": 32
                },
                "seed": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "if": {
            "properties": {
              "$ref": {
                "not": {}
              }
            }
          },
          "then": {
            "required": [
              "type",
              "properties"
            ]
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "additionalProperties": false
}
