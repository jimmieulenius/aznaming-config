{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    }
  },
  "required": [
    "$schema"
  ],
  "patternProperties": {
    "^[^$]": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "childDictionary",
            "dictionary",
            "freeText",
            "instance",
            "unique"
          ]
        }
      },
      "required": [
        "type"
      ],
      
      "oneOf": [
        
        {
          "properties": {
            "type": {
              "enum": [
                "dictionary"
              ]
            },
            "source": {
              "type": "object",
              "patternProperties": {
                ".": {
                  "type": "string"
                }
              }
            }
          },
          "required": [
            "type",
            "source"
          ]
        },
        
        {
          "properties": {
            "type": {
              "enum":
              [
                "freeText"
              ]
            },
            "required": [
              "type"
            ]
          }
        }
        
      ]
    }
  },
  "additionalProperties": false
}
