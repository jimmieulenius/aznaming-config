{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/jimmieulenius/aznaming/refs/heads/main/schemas/config/defs/restApi.json",

  "type": "object",
  "properties": {
    "$ref": {
      "type": "string"
    }
  },
  "patternProperties": {
    "^(?!\\$)": {
      "type": "object",
      "properties": {
        "properties": {
          "type": "object",
          "properties": {
            "apiVersion": {
              "type": "string"
            },
            "requests": {
              "type": "object",
              "patternProperties": {
                ".": {
                  "type": "object",
                  "properties": {
                    "uri": {
                      "type": "string",
                      "format": "uri"
                    },
                    "body": {
                      "type": "object",
                      "additionalProperties": true
                    }
                  },
                  "required": [
                      "uri"
                  ]
                }
              }
            }
          },
          "required": [
            "apiVersion",
            "requests"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "properties"
      ]
    }
  },
  "additionalProperties": false
}
